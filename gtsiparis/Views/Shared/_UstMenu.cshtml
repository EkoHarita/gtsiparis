@model  gtsiparis.Models.MenuViewModels

    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("Gıda Topluluğu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Anasayfa", "Index", "Home")</li>
            <li>@Html.ActionLink("Hakkımızda", "About", "Home")</li>
            <li>@Html.ActionLink("İletişim", "Contact", "Home")</li>
            @if (Request.IsAuthenticated)
            {
            <li>@Html.ActionLink("Sipariş Ver", "UrunListesi", "Genel", new { id = 14, page=1 }, new { @class = "btn btn-primary" })</li>
            <li>@Html.ActionLink("Tüm Siparişler", "TumSiparisler", "Genel", null, new { @class = "btn btn-primary" })</li>
            <li>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Yönetici Paneli
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        @foreach (var item in Model.MenuItems)
                        {
                            if (item.MenuController == "Urun")
                            {
                                <li>@Html.ActionLink(item.MenuAdi, "Index", new { controller = "Urun", page = 1 })</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink(item.MenuAdi, "Index", item.MenuController)</li>
                            }

                        }
                    </ul>
                </div>
            </li>
            <li>
                @Html.Action("Sepet", "Genel", new { @id = "popup" })
            </li>
            }
</ul>
        @Html.Partial("_LoginPartial")
    </div>




