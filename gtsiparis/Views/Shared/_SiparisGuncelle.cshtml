@model gtsiparis.Siparis

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id, new { @id = "SiparisId" })

        <dl class="dl-horizontal">
            <dt>
                Ürün Adı:
            </dt>
            <dd>
                @Model.Urun.Adi
            </dd>
            <dt>
                Fiyat:
            </dt>
            <dd>
                @Model.Urun.Fiyat
            </dd>
        </dl>
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1" style="width:60px">@Model.Urun.Birim.BirimAdi </span>
            @Html.TextBox("SiparisMiktari", (decimal)Model.Miktar, htmlAttributes: new { @class = "form-control", @id = "SipMik" })
        </div>
</div>
}




